import java.time.LocalDate;

public class CheckingAccount extends Account implements AccountInterface {
    private final double serviceFee = 0.50;
    private final double overdraftFee = 30.00;
    private final double interestRate = 0.02;

    public CheckingAccount(String accountNumber, double initialBalance) {
        super(accountNumber, initialBalance);
    }

    @Override
    public void withdrawal(double amount) {
        if (amount + serviceFee > balance) {
            balance -= (amount + serviceFee + overdraftFee);
            System.out.println("Warning: Account overdrawn. Overdraft fee charged.");
        } else {
            balance -= (amount + serviceFee);
        }
    }

    @Override
    public void deposit(double amount) {
        balance += (amount - serviceFee);
    }

    @Override
    public double getBalance() {
        return balance;
    }

    public void applyInterest() {
        balance += balance * interestRate;
    }
}
